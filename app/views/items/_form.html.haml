= form_for @item do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :level_id
    %br
    = collection_select(:item, :level_id, Level.all, :id, :name, prompt: true)
  %p
    = f.label :product_id
    %br
    = collection_select(:item, :product_id, Product.all, :id, :name, prompt: true)
  %p
    = f.submit
